<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="taskData"
            type="com.ezralee.bdotodo.data.model.TaskData" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp">

    <TextView
        android:id="@+id/goallist_inner_inner_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{taskData.task}"
        style="@style/dailyRecyclerTitleStyle"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/goallist_inner_inner_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{taskData.total}"
        android:layout_alignParentRight="true"
        style="@style/dailyRecyclerTitleStyle"
        android:textSize="16sp"/>

</RelativeLayout>
</layout>