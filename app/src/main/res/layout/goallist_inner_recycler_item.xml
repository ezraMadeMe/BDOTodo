<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.ezralee.bdotodo.viewmodel.goal.MainGoalVM" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/goallist_inner_recycler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@={viewModel.planData.plan}"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/nexonlv1_bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goallist_inner_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goallist_inner_recycler_item_title"
        tools:listitem="@layout/goallist_inner_inner_recycler_item"
        items="@{viewModel.tasks}"/>

</RelativeLayout>
</layout>