<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="@color/colorTransparent">

    <TextView
        android:id="@+id/daily_recycler_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022/11/03"
        style="@style/dailyRecyclerTitleStyle"
        android:textColor="@color/colorOnSecondary"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/todo_recycler_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달성 방법"
        style="@style/dailyRecyclerTitleStyle"
        android:layout_below="@+id/daily_recycler_item_date"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorOnSecondary"/>

    <TextView
        android:id="@+id/daily_recycler_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000 개"
        style="@style/dailyRecyclerTitleStyle"
        android:layout_below="@+id/daily_recycler_item_date"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorOnSecondary"/>

    <Button
        android:id="@+id/btn_add_todo_delete"
        style="@style/button_basic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorOnPrimary"
        android:foreground="@drawable/ic_baseline_delete_outline_24"
        android:foregroundTint="@color/colorPrimaryVariant"
        android:text=""
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true" />

</RelativeLayout>