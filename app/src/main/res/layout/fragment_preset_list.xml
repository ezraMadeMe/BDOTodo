<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="presetList"
            type="com.ezralee.bdotodo.data.model.GoalPreset" />

        <variable
            name="viewModel"
            type="com.ezralee.bdotodo.viewmodel.GoalVM" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goallist_preset_recycler"
            style="@style/history_dialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onItemSelected="@{()->viewModel.selectPreset()}"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>
</layout>