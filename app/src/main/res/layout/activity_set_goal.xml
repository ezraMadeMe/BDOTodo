<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/set_goal_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/delete_detail_goal_page"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_delete_outline_24" />

    <TextView
        android:id="@+id/add_detail_goal_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소목표 추가"
        style="@style/history_dialog_text"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_baseline_add_24"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="60dp"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/history_done"
            style="@style/button_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/history_cancel"
            style="@style/button_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="취소" />

    </LinearLayout>

</RelativeLayout>