<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goalItem"
            type="com.ezralee.bdotodo.data.model.GoalItem" />

        <variable
            name="viewModel"
            type="com.ezralee.bdotodo.viewmodel.goal.MainGoalVM" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/history_dialog"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="12dp"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/color_picker_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/picker_color_item"
            android:onItemSelected="@{()->viewModel.colorPick()}"
            android:adapter="@{viewModel.colorAdapter}"/>

    </androidx.cardview.widget.CardView>
</layout>
