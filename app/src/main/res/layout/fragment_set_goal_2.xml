<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="planData"
        type="com.ezralee.bdotodo.data.model.PlanData" />
    <variable
        name="viewModel"
        type="com.ezralee.bdotodo.viewmodel.goal.SetGoalFragment2VM" />
</data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <ImageView
        android:id="@+id/delete_detail_goal_page"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        android:onClick="@{()->viewModel.deletePlan(viewModel.currentPage)}"/>

    <TextView
        android:id="@+id/add_detail_goal_page"
        style="@style/history_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:drawableTop="@drawable/ic_baseline_add_24"
        android:text="소목표 추가"
        android:textSize="12sp"
        android:onClick="@{()->viewModel.addPlan()}"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_history_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/plan_title_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="소목표 제목 입력"
                android:maxLines="1"
                android:textColor="@color/colorOnSecondary"
                android:textColorHint="@color/colorOnSecondary"
                android:textCursorDrawable="@color/colorPrimaryVariant"
                android:text="@={planData.plan}"/>

        </LinearLayout>


        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimaryVariant" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plan_start_date"
                    style="@style/history_dialog_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexonlv1_bold"
                    android:text="@={planData.start}"
                    android:textSize="20sp"
                    android:onClick="@{()->viewModel.setStart()}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimaryVariant" />

            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="12dp"
                android:src="@drawable/ic_baseline_arrow_forward_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plan_end_date"
                    style="@style/history_dialog_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexonlv1_bold"
                    android:text="@{planData.end}"
                    android:textSize="20sp"
                    android:onClick="@{()->viewModel.setEnd()}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimaryVariant" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:text="달성 방법"
                android:textColor="@color/colorOnSecondary" />

            <com.github.angads25.toggle.widget.LabeledSwitch
                android:id="@+id/and_or_toggle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                app:colorBorder="@color/colorOnSecondary"
                app:colorOff="@color/colorOnSecondary"
                app:colorOn="@color/colorSecondary"
                app:textOff="또는"
                app:textOn="그리고"
                android:onClick="@{()->viewModel.setNor(viewModel.nor)}"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/task_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/set_goal2_recycler_item"
            android:adapter="@{viewModel.taskAdapter}"/>

        <TextView
            style="@style/history_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="12dp"
            android:text="모으면 완성"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>
</layout>