<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="java.lang.Object"/>
        <variable
            name="taskData"
            type="com.ezralee.bdotodo.data.model.TaskData" />
        <variable
            name="viewModel"
            type="com.ezralee.bdotodo.viewmodel.goal.SetGoalVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/and_or"
            style="@style/normaltextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryVariant" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/task"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bs_search_shape"
                android:backgroundTint="@color/colorOnSecondary"
                android:gravity="center_horizontal"
                android:hint="재료명"
                android:maxLines="1"
                android:text="@={taskData.task}"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimaryVariant" />

            <TextView
                style="@style/history_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:text="이"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/total"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bs_search_shape"
                android:backgroundTint="@color/colorOnSecondary"
                android:gravity="center_horizontal"
                android:hint="필요개수"
                android:inputType="number"
                android:maxLines="1"
                android:text="@={taskData.total}"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimaryVariant" />

            <TextView
                style="@style/history_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="개"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/add_task"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:onClick="@{()->viewModel.addTask()}"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <ImageView
                android:id="@+id/delete_task"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:onClick="@{()->viewModel.deleteTask()}"
                android:src="@drawable/ic_baseline_delete_outline_24" />
        </LinearLayout>
    </LinearLayout>
</layout>