<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  본문 텍스트 스타일  -->
    <style name="normaltextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/nexonlv1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--  BNV 텍스트 스타일  -->
    <style name="selectedBNVtextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/nexonlv1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="notSelectedBNVtextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/nexonlv1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <!--  데일리 리사이클러뷰 텍스트 스타일  -->
    <style name="dailyRecyclerTitleStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/nexonlv1_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="dailyRecyclerSubtitleStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/nexonlv1_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--  BS 버튼 텍스트 스타일  -->
    <style name="bottomsheetButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nexonlv1_bold</item>
        <item name="android:background">@drawable/bs_today_selector</item>
    </style>

    <!--  History Dialog 세팅  -->

    <style name="history_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="borderlessButtonStyle">@null</item>
    </style>

    <style name="history_dialog_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_basic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:text">버튼</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/bs_today_selector</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TransparentCompat." parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorOnSecondary</item>
    </style>

    <style name="NumberPickerTheme">
        <item name="android:editTextColor">@color/colorOnPrimary</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
    </style>

</resources>